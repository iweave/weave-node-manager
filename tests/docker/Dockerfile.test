# Dockerfile for WNM test and development environment
# Provides a Debian-based Linux environment with systemd, UFW, and test dependencies
# Used for both testing and development since macOS lacks systemd

FROM debian:bookworm-slim

# Install system dependencies
# Debian Bookworm comes with Python 3.11, which is compatible with WNM
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    sqlite3 \
    systemd \
    ufw \
    sudo \
    procps \
    net-tools \
    curl \
    wget \
    git \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Create ant user with sudo privileges
RUN useradd -m -s /bin/bash ant && \
    echo "ant ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Create working directory
WORKDIR /app

# Copy requirements
COPY requirements.txt requirements-dev.txt ./

# Install Python dependencies
RUN pip3 install --break-system-packages --no-cache-dir -r requirements.txt && \
    pip3 install --break-system-packages --no-cache-dir -r requirements-dev.txt

# Create necessary directories
RUN mkdir -p /var/antctl/services /tmp/test_nodes /tmp/test_db && \
    chown -R ant:ant /var/antctl /tmp/test_nodes /tmp/test_db /app

# Set environment variables
ENV PYTHONPATH=/app/src
ENV WNM_TEST_MODE=1
ENV PYTHONUNBUFFERED=1

# Switch to ant user
USER ant

# Default command runs tests
CMD ["pytest", "-v", "--cov=wnm", "--cov-report=term-missing"]
